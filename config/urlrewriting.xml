<?xml version="1.0" encoding="UTF-8"?>
<urlrewriting>
	<rules>
		<rule redirection="solrsearch/GetOpenSearch">
			<template>/OpenSearch/description/$resultTag.xml</template>
			<parameters>
				<globalParameter name="resultTag" />
			</parameters>
		</rule>
		<rule redirection="solrsearch/GetSearchResults">
			<template>/OpenSearch/result/$resultTag.html</template>
			<parameters>
				<globalParameter name="resultTag" />
			</parameters>
		</rule>
	</rules>
</urlrewriting>